<style>
    .container {
        padding: 20px;
        max-width: 1250px;
        margin: 0 auto;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .col-4, .col-5, .col-3 {
        padding: 10px;
    }

    table {
        width: 100%;
        background-color: #ffffff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-collapse: collapse;
    }

    table thead {
        background-color: #007bff;
        color: #ffffff;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        padding: 10px;
    }

    table tbody tr td {
        padding: 12px 15px;
        border-bottom: 1px solid #e0e0e0;
        font-size: 15px;
        color: #333;
    }

    table tbody tr:last-child td {
        border-bottom: none;
    }

    table tbody tr td:first-child {
        font-weight: bold;
        color: #555;
    }

    .section-title {
        font-size: 20px;
        font-weight: bold;
        color: #392d2d;
        margin-bottom: 10px;
        text-align: center;
    }
</style>

<div class="container">
    <div class="row">
        <!-- Hotel Information -->
        <div class="col-4">
            <div class="section-title">Thông tin khách sạn</div>
            <table>
                <tbody>
                    <tr>
                        <td>Tên khách sạn:</td>
                        <td><%= hotel_owner.name %></td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td><%= hotel_owner.address %></td>
                    </tr>
                    <tr>
                        <td>Số sao:</td>
                        <td><%= hotel_owner.star %></td>
                    </tr>
                    <tr>
                        <td>Miêu tả:</td>
                        <td><%= hotel_owner.description %></td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td><%= hotel_owner.sodienthoai %></td>
                    </tr>
                    <tr>
                        <td>SLOGAN:</td>
                        <td><%= hotel_owner.slogan %></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Hotel Policies -->
        <div class="col-5">
            <div class="section-title">Chính sách khách sạn</div>
            <table>
                <tbody>
                    <tr>
                        <td>Thời gian nhận phòng:</td>
                        <td><%= hotel_owner.timecheckin %></td>
                    </tr>
                    <tr>
                        <td>Thời gian trả phòng:</td>
                        <td><%= hotel_owner.timecheckout %></td>
                    </tr>
                    <tr>
                        <td>Chính sách đặt phòng:</td>
                        <td><%= hotel_owner.chinhsachdatphong %></td>
                    </tr>
                    <tr>
                        <td>Chính sách trẻ em:</td>
                        <td><%= hotel_owner.chinhsachtreem %></td>
                    </tr>
                    <tr>
                        <td>Độ tuổi giới hạn:</td>
                        <td><%= hotel_owner.dotuoigioihan %></td>
                    </tr>
                    <tr>
                        <td>Vật nuôi:</td>
                        <td><%= hotel_owner.vatnuoi %></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Owner Information -->
        <div class="col-3">
            <div class="section-title">Thông tin chủ khách sạn</div>
            <table>
                <tbody>
                    <tr>
                        <td>Tên:</td>
                        <td><%= hotel_owner.owner.name %></td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td><%= hotel_owner.owner.phone %></td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td><%= hotel_owner.owner.email %></td>
                    </tr>
                    <tr>
                        <td>Giới tính:</td>
                        <td><%= hotel_owner.owner.gioitinh %></td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td><%= hotel_owner.owner.address %></td>
                    </tr>
                    <tr>
                        <td>Chứng minh nhân dân:</td>
                        <td><%= hotel_owner.owner.cmnd %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
