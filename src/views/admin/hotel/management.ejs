<style>
    .two-line-ellipsis {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
      }
</style>
<div class="card">
    <div class="card-header d-flex">
      <div class="card-title flex-grow-1 d-flex justify-content-between align-items-center">
          <h3>Quản lý khách sạn</h3>
          <a href="/administrator/hotel/add" class="btn btn-dark">Thêm</a>
      </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table id="datatable" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>STT</th>
            <th>Tên khách sạn</th>
            <th>Chủ sở hữu</th>
            <th>Địa chỉ</th>
            <th>Số sao</th>
            <th>Thành phố</th>
            <th>Miêu tả</th>
            <th>Quản lý </th>
          </tr>
        </thead>
        <tbody>
          <% var i=1; %>
          <% for(let hotel of hotels){ %>
          <tr>
            <td><%= i++ %></td>
            <td><%= hotel.name %></td>
            <td><%= hotel.owner.name %></td>
            <td><%= hotel.address %></td>
            <td><%= hotel.star %></td>
            <td class="two-line-ellipsis"><%= citys[hotel._id]%></td>
            <td class="two-line-ellipsis"><%= hotel.description  %></td></td>
            <td>
                <% if (hotel.isActive === false ) { %>
                  <a href="/administrator/hotel/activate/<%= hotel._id %>" class="btn btn-primary">Kích hoạt</a>
                <% } else { %>
                  <button onclick="deleteConfirmButtonClk('/administrator/hotel/negate/<%= hotel._id %>','Bạn có muốn vô hiệu khách sạn này không?')" class="btn btn-primary">Vô Hiệu</button>
                <% } %>
                <button  onclick="deleteConfirmButtonClk('/administrator/hotel/delete/<%=hotel._id %>','Bạn có muốn xóa thông tin khách sạn này không?')" class="btn btn-danger">Xóa</button>
              </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
  </div>