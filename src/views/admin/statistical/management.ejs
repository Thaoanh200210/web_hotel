<section class="content">
    <div class="container">
        <!-- Chung -->
        <div class="d-flex flex-column gap-5">
            <div class="d-flex gap-5">
                <div class="small-box bg-info flex-fill d-flex flex-column justify-content-between">
                    <div class="inner">
                        <h1><%= number_of_hotel %></h1>
                        <p style="font-size: 30px; font-family: initial;">Khách sạn</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-home"></i>                    </div>
                </div>
        
                <!-- <div class="small-box bg-danger flex-fill d-flex flex-column justify-content-between">
                    <div class="inner">
                        <h1><%= number_of_type_room %></h1>
                        <p style="font-size: 30px; font-family: initial;">Loại phòng</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>                    </div>
                </div> -->
                <div class="small-box bg-success flex-fill d-flex flex-column justify-content-between">
                    <div class="inner">
                        <h1><%= number_of_city %></h1>
                        <p style="font-size: 30px; font-family: initial;">Địa điểm</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-search"></i>                    </div>
                </div>
                <div class="small-box bg-warning flex-fill d-flex flex-column justify-content-between">
                    <div class="inner">
                        <h1><%= number_of_selection %></h1>
                        <p style="font-size: 30px; font-family: initial;">Hình thức thanh toán</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-card"></i>                    </div>
                </div>
                
            </div>
        </div>
        <!-- Form chọn -->
         <h3>Thống kê số khách sạn theo vị trí địa lý</h3>
        <div class="chart-container" style="position: relative; height:300px; width:100%;">
            <canvas id="cityChart"></canvas>
        </div>
         <h3>Thống kê số lượng booking của khách sạn</h3>
        <form action="/administrator/statistical" method="GET" class="mb-4">
            <div class="form-group">
                <label for="periodType">Chọn loại thời gian:</label>
                <select id="periodType" name="type" class="form-control">
                    <option value="month" selected>Tháng</option>
                    <option value="quarter">Quý</option>
                    <option value="year">Năm</option>
                </select>
            </div>
        
            <div class="form-group" id="monthInput">
                <label for="month">Chọn tháng:</label>
                <input type="month" id="month" name="month" class="form-control" value="<%= new Date().toISOString().slice(0, 7) %>">
            </div>
        
            <div class="form-group d-none" id="quarterInput">
                <label for="quarter">Chọn quý:</label>
                <select id="quarter" name="quarter" class="form-control">
                    <option value="<%= new Date().getFullYear() %>-1">Quý 1</option>
                    <option value="<%= new Date().getFullYear() %>-2">Quý 2</option>
                    <option value="<%= new Date().getFullYear() %>-3">Quý 3</option>
                    <option value="<%= new Date().getFullYear() %>-4">Quý 4</option>
                </select>
            </div>
        
            <div class="form-group d-none" id="yearInput">
                <label for="year">Chọn năm:</label>
                <input type="number" id="year" name="year" class="form-control" value="<%= new Date().getFullYear() %>" min="2000" max="2100">
            </div>
        
            <button type="submit" class="start btn btn-primary mt-2">Xem thống kê</button>
            <button type="button" id="resetButton" class="btn btn-secondary mt-2">Xóa phân loại</button>
        </form>
        <div>
            
        </div>

        <div class="row">
            <div class="col-6">
                <h3 style="text-align: center;  ">Số lượng booking của các khách sạn</h3>
                <div class="chart-container" style="position: relative; height:300px; width:600px;padding-right: 20px;">
                    <canvas id="bookingChart"></canvas>
                </div>
            </div>

            <div class="col-6">
                <h3 style="text-align: center;   ">Thu nhập của các khách sạn</h3>
                <div class="chart-container" style="position: relative; height:300px; width:600px;  padding-right: 10px;">
                    <canvas id="incomeChart"></canvas>
                </div>
            </div>
        </div>
        
        <!-- Biểu đồ -->
         <div class="statistic-section">
             <div>
                 <h3>Cao nhất</h3>
                 <div class="statistic-section">
                     <ol class="olcards" id="rankingBoard"></ol>
                 </div>
             </div>
             <div>
                <h3>Thấp nhất</h3>
                <div class="statistic-section">
                    <ol class="olcards" id="rankingBoardLowest"></ol>
                </div>
            </div>
         </div>

         
       
    </div>
</section>

<script>
    const result = <%- JSON.stringify(statistic_result) %>;
    const income = <%- JSON.stringify(hotel_incomes) %>;
    const name = <%- JSON.stringify(hotel_names) %>;
    const type = <%- JSON.stringify(type) %>;
    const month = <%- JSON.stringify(month) %>;
    const quarter = <%- JSON.stringify(quarter) %>;
    const year = <%- JSON.stringify(year) %>;
    const cityResult = <%- JSON.stringify(hotel_city) %>;
    const cities = <%- JSON.stringify(cities) %>;
    const cityNames = {}
    const cityLabels = []
    const cData = []
    for (let c in cities) {
        cityNames[cities[c]._id] = cities[c].name;
    }
    for (let c in cityResult) {
        cityLabels.push(cityNames[c])
        cData.push(cityResult[c].length)
    }

    // Draw top booking

    // Sắp xếp các khách sạn theo tổng số đặt phòng
    const sortedHotels = Object.entries(result)
        .sort(([, a], [, b]) => b.totalBookings - a.totalBookings);

    // Lấy top 5 khách sạn và sắp xếp cho bảng xếp hạng
    const topHotels = sortedHotels.slice(0, 5);
    const rankingBoard = [
        topHotels[0] || null, // vị trí thứ 3
        topHotels[1] || null, // vị trí thứ 2
        topHotels[2] || null, // vị trí thứ 1 (giữa)
        topHotels[3] || null, // vị trí thứ 4
        topHotels[4] || null  // vị trí thứ 5
    ];
    const rankingBoardLowest = [
        topHotels[topHotels.length - 1] || null, 
        topHotels[topHotels.length - 2] || null, 
        topHotels[topHotels.length - 3] || null,
        topHotels[topHotels.length - 4] || null, 
        topHotels[topHotels.length - 5] || null 
    ];

    const colors = ["#fc374e", "#36aeb3", "#162d59", "#f15f0e", "#8b5cf6"];
    const emojis = ["😀", "😁", "😉", "😜", "😍"];
    const labels = Object.values(name);
    const rankingBoardContainer = document.getElementById("rankingBoard");
    const rankingBoardLowestContainer = document.getElementById("rankingBoardLowest");
    rankingBoard.forEach((hotel, index) => {
      const li = document.createElement("li");
      li.style.setProperty("--cardColor", colors[index]);

      const content = document.createElement("div");
      content.className = "content";

      const icon = document.createElement("div");
      icon.className = "icon";
      icon.textContent = emojis[index];

      const title = document.createElement("div");
      title.className = "title";
      title.textContent = hotel ? `${labels[index]}` : "N/A";

      const text = document.createElement("div");
      text.className = "text";
      text.textContent = hotel ? `Tổng đặt phòng: ${hotel[1].totalBookings}` : "Không có dữ liệu";

      content.appendChild(icon);
      content.appendChild(title);
      content.appendChild(text);
      li.appendChild(content);
      rankingBoardContainer.appendChild(li);
    });

    rankingBoardLowest.forEach((hotel, index) => {
      const li = document.createElement("li");
      li.style.setProperty("--cardColor", colors[index]);

      const content = document.createElement("div");
      content.className = "content";

      const icon = document.createElement("div");
      icon.className = "icon";
      icon.textContent = emojis[index];

      const title = document.createElement("div");
      title.className = "title";
      title.textContent = hotel ? `${labels[labels.length - (index + 1)]}` : "N/A";

      const text = document.createElement("div");
      text.className = "text";
      text.textContent = hotel ? `Tổng đặt phòng: ${hotel[1].totalBookings}` : "Không có dữ liệu";

      content.appendChild(icon);
      content.appendChild(title);
      content.appendChild(text);
      li.appendChild(content);
      rankingBoardLowestContainer.appendChild(li);
    });


        
    const visualData = {
        month:  {title: 'tháng', value: month},
        quarter: {title: 'quý', value: quarter},
        year: {title: 'năm', value: year}
    }
    const title = `Số lượt booking vào ${visualData[type].title} ${visualData[type].value}`
    const cityTitle = `Số khách sạn ở từng tỉnh thành`
    const incomeTitle = `Thu nhập của từng khách sạn`
    const data = {
        labels: labels,
        datasets: [{
            label: title,
            data: Object.values(result).map(item => item.totalBookings),
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
        }]
    };

    // Cấu hình biểu đồ
    const config = {
        type: 'bar',
        data: data,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    };

    const bookingChart = new Chart(
        document.getElementById('bookingChart'),
        config
    );
    const cityData = {
        labels: cityLabels,
        datasets: [{
            label: cityTitle,
            data: cData,
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
        }]
    };

    const cityConfig = {
        type: 'bar',
        data: cityData,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    };

    const cityChart = new Chart(
        document.getElementById('cityChart'),
        cityConfig
    );

    const incomeData = {
        labels: labels,
        datasets: [{
            label: incomeTitle,
            data: Object.values(income).map(item => item),
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
        }]
    };
    
    const incomeConfig = {
        type: 'bar',
        data: incomeData,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    };

    const incomeChart = new Chart(
        document.getElementById('incomeChart'),
        incomeConfig
    );
    const periodTypeSelect = document.getElementById('periodType');
    const monthInput = document.getElementById('monthInput');
    const quarterInput = document.getElementById('quarterInput');
    const yearInput = document.getElementById('yearInput');

    periodTypeSelect.addEventListener('change', function() {
        switch (this.value) {
            case 'month':
                monthInput.classList.remove('d-none');
                quarterInput.classList.add('d-none');
                yearInput.classList.add('d-none');
                break;
            case 'quarter':
                monthInput.classList.add('d-none');
                quarterInput.classList.remove('d-none');
                yearInput.classList.add('d-none');
                break;
            case 'year':
                monthInput.classList.add('d-none');
                quarterInput.classList.add('d-none');
                yearInput.classList.remove('d-none');
                break;
        }
    });

    resetButton.addEventListener('click', function() {
        window.location.href = '/administrator/statistical';
    });
</script>