<style>
    .two-line-ellipsis {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
      }
</style>
<div class="card">
    <div class="card-header d-flex">
      <div class="card-title flex-grow-1 d-flex justify-content-between align-items-center">
          <h3>Quản lý lựa chọn loại phòng</h3>
          <a href="/administrator/type_room/add" class="btn btn-dark">Thêm</a>
      </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table id="datatable" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>STT</th>
            <th>Tên loại phòng</th>
            <th>Số lượng khách</th>
            <th>Quản lý </th>
          </tr>
        </thead>
        <tbody>
          <% var i=1; %>
          <% for(let type_room of type_rooms){ %>
          <tr>
            <td><%= i++ %></td>
            <td><%= type_room.name %></td>
            <td><%= type_room.number_guest %></td>
            <td>
                <a href="/administrator/type_room/edit/<%=type_room._id %>"  class="btn btn-primary">Sửa</a >
                <button  onclick="deleteConfirmButtonClk('/administrator/type_room/delete/<%=type_room._id %>','Bạn có muốn xóa thông tin loại phòng này không?')" class="btn btn-danger">Xóa</button>
              </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
  </div>