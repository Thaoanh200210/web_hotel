<div class="card">
    <div class="card-header d-flex">
        <div class="card-title flex-grow-1 d-flex justify-content-between align-items-center">
            <h5 class="modal-title d-flex align-items-center">
                <i class="bi bi-person-lines-fill fs-3 me-2"></i> Thêm Thông Tin Đặt Phòng
            </h5>
        </div>
    </div>
    <div class="card-body">
        <form action="/manager/<%=hotel._id%>/room/add-handler" enctype="multipart/form-data" method="POST" class="d-flex flex-column">
            <div class="d-flex ">
                <div class="flex-grow-1 me-3">
                    <div class="mb-3">
                        <label class="form-label ">Tên khách hàng</label>
                        <input class="form-control shadow-none" name="tenkhachhang" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày nhận phòng</label>
                        <input class="form-control shadow-none" name="checkin" type="datetime-local" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày trả phòng</label>
                        <input class="form-control shadow-none" name="checkin" type="datetime-local" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày trả phòng</label>
                        <input class="form-control shadow-none" name="checkin" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Giá phòng</label>
                        <input class="form-control shadow-none" name="giaphong" type="text" required>
                    </div>
                </div>

                <div class="flex-grow-1 ms-3">
                    <div class="mb-3">
                        <label class="form-label">Số phòng</label>
                        <select class="form-select shadow-none" name="sophong"  multiple required>
                            <% for (room of Rooms) {%>
                                <option value="<%= room._id %>">
                                    <%= room.name %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                </div>
            </div>

            <div class="text-center my-1">
                <div class="d-flex justify-content-center gap-4">
                    <a class="btn btn-warning shadow-none" href="/manager/<%=hotel._id%>/booking">
                        Trở về
                    </a>
                    <button class="btn btn-dark shadow-none" type="submit" name="">
                        Thêm thông tin
                    </button>
                </div>
            </div>
        </form>
    </div>

</div>


