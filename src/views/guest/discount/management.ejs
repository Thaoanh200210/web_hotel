<div class="card">
      <div class="card-header d-flex">
        <div class="card-title flex-grow-1 d-flex justify-content-between align-items-center">
            <h3>Quản lý giảm giá từng loại phòng</h3>
            <a href="/manager/<%=hotel._id%>/discount/add" class="btn btn-dark">Thêm</a>
        </div>
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <table id="datatable" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>STT</th>
              <th>Tên giảm giá</th>
              <th>Phòng</th>
              <th>Ngày bắt đầu</th>
              <th>Ngày kết thúc</th>
              <th>Phần trăm giảm giá</th>
              <th>Quản lý</th>
            </tr>
          </thead>
          <tbody>
            <% var i=1; %>
            <% for(let discount of discounts){ %>
            <tr>
              <td><%= i++ %></td>
              <td><%= discount.name %></td>
              <td><%= discount.type_room.name %></td>
              <td><%= discount.date_start.toLocaleString() %></td>
              <td><%= discount.date_end.toLocaleString() %></td>
              <td><%= discount.discount_percent %>%</td>
              <td>
                <a href="/manager/<%=hotel._id%>/discount/edit/<%=discount._id %>"  class="btn btn-primary">Sửa</a >
                <button  onclick="deleteConfirmButtonClk('/manager/<%=hotel._id%>/discount/delete/<%=discount._id %>','Bạn có muốn xóa thông tin sự kiện này không?')" class="btn btn-danger">Xóa</button>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <!-- /.card-body -->
    </div>