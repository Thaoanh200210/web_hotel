<style>
    .card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(to right, #2b3e53, #ffffff);
        color: #ffffff;
        padding: 15px;
        font-size: 18px;
    }

    .card-title h5 {
        margin: 0;
    }

    .card-body {
        padding: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 6px;
        padding: 10px;
        font-size: 15px;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .btn {
        padding: 10px 20px;
        font-size: 15px;
        font-weight: bold;
    }

    .btn-warning {
        color: #ffffff;
        background-color: #ffc107;
        border: none;
    }

    .btn-dark {
        color: #ffffff;
        background-color: #343a40;
        border: none;
    }

    .btn:hover {
        opacity: 0.9;
    }

    .d-flex-column {
        flex-direction: column;
    }

    .modal-title i {
        color: #ffc107;
    }

    .gap-4 {
        gap: 1.5rem;
    }
</style>

<div class="card">
    <div class="card-header d-flex">
        <div class="card-title flex-grow-1 d-flex justify-content-between align-items-center">
            <h5 class="modal-title d-flex align-items-center">
                <i class="bi bi-person-lines-fill fs-3 me-2"></i> Đăng ký trở thành đối tác
            </h5>
        </div>
    </div>
    <div class="card-body">
        <form action="/guest/hotel/add-handler" method="POST" enctype="multipart/form-data" class="d-flex flex-column">
            <div class="d-flex">
                <!-- Hotel Info -->
                <div class="flex-grow-1 me-3">
                    <div class="mb-3">
                        <label class="form-label">Tên khách sạn</label>
                        <input class="form-control shadow-none" name="tenkhachsan" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Địa chỉ khách sạn</label>
                        <input class="form-control shadow-none" name="diachi" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ảnh bìa</label>
                        <input class="form-control shadow-none" name="file" type="file" accept="image/*" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số điện thoại khách sạn</label>
                        <input class="form-control shadow-none" name="sodienthoai" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số sao</label>
                        <input class="form-control shadow-none" name="sosao" type="number" min="1" max="5" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Miêu tả khách sạn</label>
                        <input class="form-control shadow-none" name="mieuta" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Địa chỉ thành phố</label>
                        <select class="form-select shadow-none" name="city" required>
                            <% for (city of citys) { %>
                                <option value="<%= city._id %>">
                                    <%= city.name %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                </div>

                <!-- Hotel Policy -->
                <div class="flex-grow-1 me-3">
                    <div class="mb-3">
                        <label class="form-label">Thời gian nhận phòng</label>
                        <input class="form-control shadow-none" name="timecheckin" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Thời gian trả phòng</label>
                        <input class="form-control shadow-none" name="timecheckout" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Chính sách đặt phòng</label>
                        <input class="form-control shadow-none" name="chinhsachdatphong" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Chính sách trẻ em</label>
                        <input class="form-control shadow-none" name="chinhsachtreem" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Độ tuổi giới hạn</label>
                        <input class="form-control shadow-none" name="dotuoigioihan" type="text"
                            required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Vật nuôi</label>
                        <input class="form-control shadow-none" name="vatnuoi" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Slogan</label>
                        <input class="form-control shadow-none" name="slogan" type="text" required>
                    </div>
                </div>

                <!-- Owner Info -->
                <div class="flex-grow-1 ms-3">
                    <div class="mb-3">
                        <label class="form-label">Chủ sở hữu</label>
                        <input class="form-control shadow-none" name="chusohuu" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số điện thoại</label>
                        <input class="form-control shadow-none" name="phone" type="number" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input class="form-control shadow-none" name="email" type="email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mật khẩu</label>
                        <input class="form-control shadow-none" name="matkhau" type="password" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Giới tính</label>
                        <input class="form-control shadow-none" name="gioitinh" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số chứng minh nhân dân</label>
                        <input class="form-control shadow-none" name="cmnd" type="text" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Địa chỉ</label>
                        <input class="form-control shadow-none" name="address" type="text" required>
                    </div>
                </div>
            </div>

            <!-- Button Group -->
            <div class="text-center my-1">
                <div class="d-flex justify-content-center gap-4">
                    <a class="btn btn-warning shadow-none" href="/">Trở về</a>
                    <button class="btn btn-dark shadow-none" type="submit">Đăng ký</button>
                </div>
            </div>
        </form>
    </div>
</div>