<%- include("./shared/header") %>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }
    .baoboc {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
        text-align: center;
        margin-bottom: 20px;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .form-group label {
        display: block;
        margin-bottom: 5px;
    }
    .form-group label span {
        color: red;
    }
    .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    .form-group input[type="date"] {
        padding: 8px;
    }
    .form-actions {
        text-align: center;
    }
    .form-actions button {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        background-color: #28a745;
        color: #fff;
        cursor: pointer;
        font-size: 16px;
    }
    .form-actions button:hover {
        background-color: #218838;
    }
    .note {
        text-align: center;
        margin-bottom: 20px;
    }
    .note span {
        color: red;
    }
</style>
<script>
    function validateForm() {
        const idCard = document.getElementById('idCard').value;
        const phone = document.getElementById('phone').value;
        const gender = document.getElementById('gender').value;
        const dob = document.getElementById('dob').value;
        const address = document.getElementById('address').value;

        // Validate ID card (12 digits)
        if (!/^\d{12}$/.test(idCard)) {
            alert("Số căn cước phải có đúng 12 số.");
            return false;
        }

        // Validate phone number (10 digits)
        if (!/^\d{10}$/.test(phone)) {
            alert("Số điện thoại phải có đúng 10 số.");
            return false;
        }

        // Validate gender (2-3 characters)
        if (gender.length < 2 || gender.length > 3) {
            alert("Giới tính là 'Nữ' hoặc 'Nam'.");
            return false;
        }

        // Validate date of birth (past date)
        const today = new Date();
        const birthDate = new Date(dob);
        if (birthDate >= today) {
            alert("Ngày sinh phải là ngày trong quá khứ.");
            return false;
        }

        // Validate address (more than 10 characters)
        if (address.length <= 10) {
            alert("Địa chỉ phải nhiều hơn 10 ký tự.");
            return false;
        }

        return true;
    }

    
</script>
<div class="container baoboc">
    <h1>Quản Lý Tài Khoản Người Dùng</h1>
    <form action="/edit-handler-myUser/<%= customer._id %>" method="POST" onsubmit="return validateForm()">
        <div class="form-group">
            <label for="fullName">Họ và Tên:<span>*</span></label>
            <input type="text" id="fullName" name="fullName" value="<%= customer.name || 'vui lòng nhập thông tin' %>" required>
        </div>
        <div class="form-group">
            <label for="gender">Giới Tính:<span>*</span></label>
            <input type="text" id="gender" name="gender" value="<%= customer.gioitinh || 'vui lòng nhập thông tin' %>" required>
        </div>
        <div class="form-group">
            <label for="dob">Ngày Sinh:<span>*</span></label>
            <input type="date" id="dob" name="dob" value="<%= customer.birth ? customer.birth.toISOString().split('T')[0] : '' %>" placeholder="vui lòng nhập thông tin" required>
        </div>
        <div class="form-group">
            <label for="idCard">Số căn cước:<span>*</span></label>
            <input type="text" id="idCard" name="idCard" value="<%= customer.cmnd || 'vui lòng nhập thông tin' %>" required>
        </div>
        <div class="form-group">
            <label for="phone">Số Điện Thoại:<span>*</span></label>
            <input type="tel" id="phone" name="phone" value="<%= customer.phone || 'vui lòng nhập thông tin' %>" required>
        </div>
        <div class="form-group">
            <label for="email">Email:<span>*</span></label>
            <input type="email" id="email" name="email" value="<%= customer.email || 'vui lòng nhập thông tin' %>" required>
        </div>
        <div class="form-group">
            <label for="address">Địa Chỉ:<span>*</span></label>
            <input type="text" id="address" name="address" value="<%= customer.address || 'vui lòng nhập thông tin' %>" required>
        </div>
        <div class="note">
            <p>Ghi chú: Biểu tượng <span>*</span> là bắt buộc điền nếu muốn cập nhật thông tin</p>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Cập nhật thông tin tài khoản</button>
        </div>
    </form>
</div>
