
<div class="card">
      <div class="card-header d-flex">
        <div class="card-title flex-grow-1 d-flex justify-content-between align-items-center">
            <h3>Quản lý đặt phòng</h3>
            <a href="/manager/<%=hotel._id%>/booking/add" class="btn btn-dark">Thêm</a>
        </div>
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <table id="datatable" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>STT</th>
              <th>Tên khách hàng</th>
              <th>Ngày nhận phòng</th>
              <th>Ngày trả phòng</th>
              <th>Giá phòng</th>
              <th>Số chứng minh nhân dân</th>
              <th>Trạng thái</th>
              <th>Quản lý </th>
            </tr>
          </thead>
          <tbody>
            <% var i=1; %>
            <% for(let booking of bookings){ %>
            <tr>
              <td><%= i++ %></td>
              <td><%= booking.customer.name %></td>
              <td><%= booking.check_in.toLocaleString() %></td>
              <td><%= booking.check_out.toLocaleString()  %></td>
              <td><%=  parseInt(booking.total_price).toLocaleString('it-IT', {style : 'currency', currency : 'VND'}) %></td>
              <td><%= booking.customer_identify_number %></td>
              <td><%= getStatus(booking)  %></td></td>
              <td>
                <% if(getStatus(booking) == "Đã đặt phòng" || getStatus(booking) == "Đã nhận phòng") {%>
                <a class="btn btn-success" href="/manager/<%=hotel._id%>/booking/status_booking/<%=booking._id%>">
                  Sửa trạng thái</a> 
                <%}%>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <!-- /.card-body -->
    </div>