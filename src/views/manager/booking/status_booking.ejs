<div class="container">
  <div class="row">
    <div class="col-6">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Thông tin đặt phòng</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              Số phòng:
              <% details.forEach(function(detail) { %>
                <p>
                  <%= detail.room.number_room %>
                </p>
                <% }) %>

            </td>
          </tr>
          <tr>
            <td>Ngày đặt phòng: <%= details[0]?.NowDate.toLocaleString() %>
            </td>
          </tr>
          <tr>
            <td>Ngày nhận phòng: <%= booking.check_in.toLocaleString() %>
            </td>
          </tr>
          <tr>
            <td>Ngày trả: <%= booking.check_out.toLocaleString() %>
            </td>
          </tr>
          <tr>
            <td>Tiền đã đặt phòng: <%= parseInt(booking.total_price).toLocaleString('it-IT', {style : 'currency' ,
                currency : 'VND' }) %>
            </td>
          </tr>
        </tbody>
      </table>

    </div>
    <div class="col"></div>
    <div class="col-5">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Thông tin khách hàng</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= booking.customer.name %>
            </td>
          </tr>
          <tr>
            <td>SĐT: <%= booking.customer.phone %>
            </td>
          </tr>
          <tr>
            <td>Email: <%= booking.customer.email %>
            </td>
          </tr>
          <tr>
            <td>CCCD: <%= booking.customer_identify_number %>
            </td>
          </tr>
        </tbody>
      </table>

      <a href="/manager/<%=hotel._id%>/booking/status_booking/<%=id%>/add" class="btn btn-dark">Thêm đặt phòng</a>
    </div>
    <!-- <div style="color: blue; font-weight: bold ;">Đã thanh toán online: <%=  parseInt(booking.total_price).toLocaleString('it-IT', {style : 'currency', currency : 'VND'}) %></div> -->
  </div>

  <div class="row">
    <div class="col-4">
      <div class="mb-3">
        <label class="form-label">Ngày trả phòng thực tế</label>
        <input class="form-control shadow-none" name="ngaytraphong" type="datetime-local" required>
      </div>
    </div>
    <div class="col-8">
      <label class="form-label"></label>
      <div style="margin-top: 11px;">Tiền thực tế phải trả: <%= %></div>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <div class="pd-5">
        <a style="color: red;font-weight: bold;"
          href="/manager/<%=hotel._id%>/booking/status_booking/<%=id%>/service_hotel">Chọn dịch vụ
          khách sạn khách sử dụng</a>

      </div>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="c-bg-primary">Loại dịch vụ</th>
            <th class="c-bg-primary">Giá dịch vụ</th>
            <th class="c-bg-primary">Số lượng</th>
            <th class="c-bg-primary">Tiền</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% let totalServicePrice=0; %> <!-- Khởi tạo biến tổng tiền -->
            <% for (service_quantity of service_quantitys) { %>
              <tr>
                <td>
                  <%= service_quantity.service_hotel.name %>
                </td>
                <td>
                  <%= parseInt(service_quantity.service_hotel.price).toLocaleString('it-IT', { style: 'currency' ,
                    currency: 'VND' }) %>
                </td>
                <td>
                  <%= service_quantity.quatity %>
                </td>
                <td>
                  <% let servicePrice=parseInt(service_quantity.service_hotel.price) * service_quantity.quatity;
                    totalServicePrice +=servicePrice; // Cộng dồn vào tổng tiền %>
                    <%= servicePrice.toLocaleString('it-IT', { style: 'currency' , currency: 'VND' }) %>
                </td>
                <td>
                  <button
                    onclick="deleteConfirmButtonClk('/manager/<%= hotel._id %>/booking/status_booking/<%= id %>/service_hotel/delete/<%= service_quantity._id %>','Bạn có muốn xóa thông tin dịch vụ này không?')"
                    class="btn btn-danger">Xóa</button>
                </td>
              </tr>
              <% } %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3" class="text-right"><strong>Tổng tiền dịch vụ</strong></td>
            <td colspan="2">
              <%= totalServicePrice.toLocaleString('it-IT', { style: 'currency' , currency: 'VND' }) %>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="col-5" style="margin-top: 24px;">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="c-bg-primary"></th>
            <th class="c-bg-primary">Tiền</th>

          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Đã thanh toán trên web
            </td>
            <td>
              <%= parseInt(booking.total_price).toLocaleString('it-IT', {style : 'currency' , currency : 'VND' }) %>
            </td>
          </tr>
          <tr>
            <td>Tiền ở thực tế:</td>
            <td></td>
          </tr>
          <tr>
            <td>Tiền dịch vụ</td>
            <td>
              <%= totalServicePrice.toLocaleString('it-IT', { style: 'currency' , currency: 'VND' }) %>
            </td>
          </tr>
          <tr>
            <td>Tổng thanh toán</td>
            <td>
             
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <form action="/manager/<%=hotel._id%>/booking/status_booking/<%=id%>" method="POST">
    <div class="form-check">
      <input class="form-check-input" type="radio" name="status" id="CheckedIn" value="Đã nhận phòng" checked>
      <label class="form-check-label" for="CheckedIn">
        Đã nhận phòng
      </label>
    </div>
    <div class="form-check ">
      <input class="form-check-input" type="radio" name="status" id="CheckedOut" value="Đã trả phòng">
      <label class="form-check-label" for="CheckedOut">
        Đã trả phòng
      </label>
    </div>
    <div class="form-check ">
      <input class="form-check-input" type="radio" name="status" id="cancel" value="cancel">
      <label class="form-check-label" for="cancel">
        Đã hủy
      </label>
    </div>
    <div>
      <a class="btn btn-warning shadow-none" href="/manager/<%=hotel._id%>/booking">
        Trở về
      </a>
      <button class="btn btn-primary">Sửa trạng thái</button>
    </div>

  </form>

</div>