<style>
    .two-line-ellipsis {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
      }
</style>
<div class="card">
    <div class="card-header d-flex">
      <div class="card-title flex-grow-1 d-flex justify-content-between align-items-center">
          <h3>Quản lý cơ sở bật chất</h3>
          <a href="/manager/<%=hotel._id%>/service/add" class="btn btn-dark">Thêm</a>
      </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table id="datatable" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>STT</th>
            <th>Tên cơ sở vật chất</th>
            <th>Icon</th>
            <th>Quản lý </th>
          </tr>
        </thead>
        <tbody>
          <% var i=1; %>
          <% for(let service of services){ %>
          <tr>
            <td><%= i++ %></td>
            <td><%= service.name %></td>
            <td><i class="<%=service.icon%> text-success"
              style="font-size: 20px"></i></td>
            <td>
                <a href="/manager/<%=hotel._id%>/service/edit/<%=service._id %>"  class="btn btn-primary">Sửa</a >
                <button  onclick="deleteConfirmButtonClk('/manager/<%=hotel._id%>/service/delete/<%=service._id %>','Bạn có muốn xóa thông tin dịch vụ này không?')" class="btn btn-danger">Xóa</button>
              </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
  </div>