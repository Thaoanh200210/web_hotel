
<div class="container">
    <div class="row">
        <div class="col-7">
            <div class="position-relative" style="padding-bottom: 130px;">
                <div id="images_of_room" class="carousel slide" data-ride="carousel">
                    <style>
                        div.active>img.rounded {
                            border: 4px solid rgb(64, 165, 224) !important;
                        }
                    </style>
                    <div class="carousel-indicators" style="display: flex; justify-content: start; gap:10px; bottom:-125px; margin-left: 0; margin-right:0">
                        <% var i=0; %>
                        <% for(let image of room.images) {%>
                            <div data-target="#images_of_room" data-slide-to="<%= i %>" class="<%= i++ == 0 ? 'active' : '' %>">
                                <img class="rounded" src="<%= image.url %>" alt="<%= room.name + ' '+ i %>" style="height: 100px; width:100px;">
                            </div>
                        <% } %>
                    </div>
    
                    <div class="carousel-inner">
                        <% var i=0; %>
                        <% for(let image of room.images) {%>
                            <div class="carousel-item <%= i++ == 0 ? 'active' : '' %>">
                                <img class="d-block w-100" src="<%= image.url %>" alt="<%= room.name + ' '+ i %>">
                            </div>
                        <% } %>
                    </div>
    
                    <a class="carousel-control-prev" href="#images_of_room" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#images_of_room" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
            </div>
        </div>
        <div class="col-5">
            <div class="fw-bold fs-2"><%= room.name %></div>
            <div class="pb-2">Số phòng: <%= room.number_room %> </div>
            <div class="pb-2">Loại phòng: <%= room.type_room.name %> </div>
            <div class="pb-2">Số lượng khách: <% for(let i =0;i< room.type_room.number_guest; i++ ){%> <i class="bi bi-person-fill"></i> <% }%></div>
            <div class="pb-2">Mô tả:</div>
            <div class="pb-2"> <%= room.description %> </div>
            <div class="pb-2">Dịch vụ phòng: </div>
            <div class="d-flex gap-4 flex-wrap pb-2">
                <%for( let service of room.services ) { %>
                    <div class="d-flex justify-content-center align-items-center gap-2">
                        <i class="<%= service.icon %>"></i> 
                        <div><%= service.name %></div> 
                    </div>
                <% } %>
            </div>
            <div class="pb-2">Lựa chọn thanh toán bằng: </div>
            <div class="d-flex gap-4 flex-wrap pb-2">
                <%for( let selection of room.selections ) { %>
                    <div class="d-flex justify-content-center align-items-center gap-2">
                        <i class="<%= selection.icon %>"></i> 
                        <div><%= selection.name %></div> 
                    </div>
                <% } %>
            </div>
            <div class="pb-2 text-success fw-semibold fs-4" >Giá phòng: <%= parseInt(room.original_price).toLocaleString('it-IT', {style : 'currency', currency : 'VND'}) %> cho 1 đêm</div>
        </div>

        <a class="btn btn-warning shadow-none" href="/manager/<%=hotel._id%>/room">
            Trở về
        </a>
    </div>
</div>