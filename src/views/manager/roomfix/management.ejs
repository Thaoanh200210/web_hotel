<div class="card">
      <div class="card-header d-flex">
        <div class="card-title flex-grow-1 d-flex justify-content-between align-items-center">
            <h3>Quản lý phòng tạm ngừng hoạt động</h3>
            <a href="/manager/<%=hotel._id%>/roomfix/add" class="btn btn-dark">Thêm</a>
        </div>
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <table id="datatable" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>STT</th>
              <th>Số phòng</th>
              <th>Tên phòng</th>
              <th>Lý do tạm ngưng</th>
              <th>Quản lý</th>
            </tr>
          </thead>
          <tbody>
            <% var i=1; %>
            <% for(let roomfix of roomfixs){ %>
            <tr>
              <td><%= i++ %></td>
              <td><%= roomfix.room.number_room %></td>
              <td><%= roomfix.room.name %></td>
              <td><%= roomfix.description %></td>
              <td>
                <a href="/manager/<%=hotel._id%>/roomfix/detail/<%=roomfix._id %>"  class="btn btn-success">Xem chi tiết</a >
                <a href="/manager/<%=hotel._id%>/roomfix/edit/<%=roomfix._id %>"  class="btn btn-primary">Sửa</a >
                <button  onclick="deleteConfirmButtonClk('/manager/<%=hotel._id%>/roomfix/delete/<%=roomfix._id %>','Bạn có muốn xóa thông tin phòng này không?')" class="btn btn-danger">Xóa</button>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <!-- /.card-body -->
    </div>